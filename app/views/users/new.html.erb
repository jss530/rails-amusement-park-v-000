<h1>New User</h1>

<%= form_for @user do |f| %>
    <div class="field">
        <%= f.label 'user[name]' %> <br>
        <%= f.text_field :name, id: 'user[name]' %>
    </div>
    <div class="field">
        <%= f.label :password %> <br>
        <%= f.password_field :password %>
    </div>

    <div class="field">
        <%= f.label :height, "Height (in inches)" %> <br>
        <%= f.text_field :height %>
    </div>
    <div class="field">
        <%= f.label :happiness, "How happy are you? (1-5 scale)" %> <br>
        <%= f.text_field :happiness %>
    </div>

    <div class="field">
        <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %> <br>
        <%= f.text_field :nausea %>
    </div>

    <div class="field">
        <%= f.label :tickets, "How many tickets would you like to buy?" %> <br>
        <%= f.text_field :tickets %> <br>
    </div>
    <div class="field">
        <%= f.label :admin, "Check box for admin" %>
        <%= f.check_box :admin %>
    </div>

        <%= f.submit %>

<% end %> <br>
<%= link_to "Back", root_path %>
